#!/bin/sh

docker run \
    --rm \
    -v /etc/localtime:/etc/localtime:ro \
    -v /etc/machine-id:/etc/machine-id:ro \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v ${HOME}/.stellarium:/home/stellarium/.stellarium \
    -e "DISPLAY=unix${DISPLAY}" \
    -e GDK_SCALE \
    -e GDK_DPI_SCALE \
    -v /dev/shm:/dev/shm \
    --device /dev/snd \
    --device /dev/dri \
    --device /dev/video0 \
    --group-add audio \
    --group-add video \
    --name stellarium \
    "${DOCKER_REPO_PREFIX}/stellarium" "$@"

