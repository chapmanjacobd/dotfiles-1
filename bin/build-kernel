#!/bin/bash
set -e
set -o pipefail

build_kernel(){
	if [ "$EUID" -ne 0 ]; then
		echo "Please run as root."
		return 1
	fi

	(
	    cd /usr/src/linux
        make && make modules_install
        make install
        grub-mkconfig -o /boot/grub/grub.cfg
        update-kernel-modules
	)
}

build_kernel "$@"
